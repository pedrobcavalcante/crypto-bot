{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6"
    ],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,  
  }
}

